datasource db {
  provider = "postgresql"
  url      = env("DEV_DB_URL")
}

generator client {
  provider      = "prisma-client-js"
  output        = "../node_modules/.prisma/client"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

// Status field values for KeywordJob table
enum KeywordJobStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  FAILED
}

model Job {
  id                 Int          @id @default(autoincrement())
  adzuna_id          String       @unique
  title              String
  location           String[]
  description        String
  created            String
  company            String
  salary_min         Float
  salary_max         Float
  contract_type      String?
  category           String
  processed_keywords String[]
  KeywordJob         KeywordJob[]
}

model KeywordJob {
  id          Int              @id @default(autoincrement())
  description String
  adzuna_id   String
  Job         Job?             @relation(fields: [jobId], references: [id])
  jobId       Int?
  status      KeywordJobStatus

   @@index([jobId], name: "jobId")
}
